<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customMap="clr-namespace:Inside.Xamarin.CustomControls;assembly=Inside.Xamarin"
             x:Class="Inside.Xamarin.Views.Home.HomePage">
    <ContentPage.Content>
        <StackLayout  Padding="3">
            <customMap:CustomMapControl 
                      x:Name="MyMap"
                      IsShowingUser="true"
                      MapType="Street"
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>