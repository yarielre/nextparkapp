
@{
    ViewData["Title"] = "SendBroadcastNotifications";
}

<!DOCTYPE html>
<html>
<head>
    <title>Send Broadcast Notifications</title>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <h2>Send Broadcast Notifications</h2>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form  method="post" asp-action="SendNotification">
                <div class="form-group">                   
                    <textarea class="form-control" name="notification" id="notification" rows="3" placeholder="Your notification goes here"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>

