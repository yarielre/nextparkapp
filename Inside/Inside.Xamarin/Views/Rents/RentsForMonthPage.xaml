<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inside.Xamarin.Views.Rents.RentsForMonthPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    
    <StackLayout
        BindingContext="{Binding RentsForMonth}">
        <ScrollView 
            Orientation="Vertical"
            Padding="20,5">>
            <StackLayout HorizontalOptions="Center">
                <Label
                    HorizontalOptions="Center"
                    Text="Time Left"
                    FontAttributes="Bold"
                    FontSize="Large" />
                <Image
                    HeightRequest="150"
                    Source="ic_clock" />
                <Label
                    HorizontalOptions="Center"
                    Text="{Binding TimeLeft,Mode=TwoWay}"
                    FontAttributes="Bold"
                    FontSize="Large" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Text="Renovate for 1 day"
                        Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="{StaticResource AcceptColor}"
                        Command="{Binding RenovateDayCommand}"
                        TextColor="White" />
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="End"
                                 Grid.Row="0"
                                 Grid.Column="1">
                        <Image
                            Source="coin"
                            />
                        <Label
                            VerticalOptions="Center"
                            Text="{Binding ParkingRented.ParkingCategory.MonthPrice, StringFormat='{0} Coins', Mode=TwoWay}" />
                    </StackLayout>

                    <Button
                        Text="Renovate for 1 month"
                        Grid.Row="1"
                        Grid.Column="0"
                        BackgroundColor="{StaticResource AcceptColor}"
                        Command="{Binding RenovateMonthCommand}"
                        TextColor="White" />
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="End"
                                 Grid.Row="1"
                                 Grid.Column="1">
                        <Image
                            Source="coin"
                             />
                        <Label
                            VerticalOptions="Center"
                            Text="{Binding MonthPrice, StringFormat='{0} Coins'}" />
                    </StackLayout>
                </Grid>
            </StackLayout>
        </ScrollView>
        <Button
            VerticalOptions="EndAndExpand"
            BackgroundColor="{StaticResource AcceptColor}"
            Command="{Binding TerminateRentCommand}"
            HeightRequest="40"
            Text="Terminate Rent"
            TextColor="White" />
        <Button
            BackgroundColor="{StaticResource AcceptColor}"
            Command="{Binding NavigateToParkingCommand}"
            HeightRequest="40"
            Text="Navigate to parking"
            TextColor="White" />
    </StackLayout>
        
</ContentPage>
